<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_search">

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.wheretotravel.presentation.main.fragment.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_navigation_search_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_help"
        android:name="com.example.wheretotravel.presentation.main.fragment.HelpFragment"
        android:label="fragment_help"
        tools:layout="@layout/fragment_help" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.wheretotravel.presentation.main.fragment.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile"/>
    <fragment
        android:id="@+id/navigation_ride"
        android:name="com.example.wheretotravel.presentation.main.fragment.RideFragment"
        android:label="fragment_ride"
        tools:layout="@layout/fragment_ride" />
    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.wheretotravel.presentation.main.fragment.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_navigation_search"
            app:destination="@id/navigation_search" />
    </fragment>

</navigation>